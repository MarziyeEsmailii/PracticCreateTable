
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>

        .custom-table {
            width: 50%;
            border-collapse: collapse;
            block-size :20px;
        }

        .custom-table th {
            font-weight: bold;
            background-color: #f2f2f2;
        }

        .custom-table tr:nth-child(even) {
            background-color: #f9f9f9; 
        }

        .custom-table tr:nth-child(odd) {
            background-color: #ffffff; 
        }

        .custom-table td, .custom-table th {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
    </style>
</head>
<body>
    <table class="custom-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Family</th>
                <th>Password</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewBag.Name</td>
                <td>@ViewBag.Family</td>
                <td>@ViewBag.Password</td>
                <td>@ViewBag.Age</td>
            </tr>
            <tr>
                <td>@ViewBag.Name</td>
                <td>@ViewBag.Family</td>
                <td>@ViewBag.Password</td>
                <td>@ViewBag.Age</td>
            </tr>
            <tr>
                <td>@ViewBag.Name</td>
                <td>@ViewBag.Family</td>
                <td>@ViewBag.Password</td>
                <td>@ViewBag.Age</td>
            </tr>
            <tr>
                <td>@ViewBag.Name</td>
                <td>@ViewBag.Family</td>
                <td>@ViewBag.Password</td>
                <td>@ViewBag.Age</td>
            </tr>
            <tr>
                <td>@ViewBag.Name</td>
                <td>@ViewBag.Family</td>
                <td>@ViewBag.Password</td>
                <td>@ViewBag.Age</td>
            </tr>
        </tbody>
    </table>
</body>
</html>
